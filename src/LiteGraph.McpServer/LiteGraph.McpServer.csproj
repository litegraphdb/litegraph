<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<Nullable>enable</Nullable>
		<Version>1.0.0</Version>	
		<Description>MCP (Model Context Protocol) server for LiteGraph graph database. Enables integration of document processing, vector storage retrieval, and graph operations via MCP.</Description>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Voltaic" Version="0.1.5" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\LiteGraph\LiteGraph.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Update="clean.bat">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
		<None Update="clean.sh">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>

